package Day9;
import java.util.Scanner;

public class Uc_2_maxFloat 
{

	    public static void main(String[] args) 
	    {
	        Scanner input = new Scanner(System.in);

	        System.out.print("Enter the first float number: ");
	        float num1 = input.nextFloat();

	        System.out.print("Enter the second float number: ");
	        float num2 = input.nextFloat();

	        System.out.print("Enter the third float number: ");
	        float num3 = input.nextFloat();

	        float max = num1;

	        if (num2 > max) {
	            max = num2;
	        }

	        if (num3 > max) {
	            max = num3;
	        }

	        System.out.println("The maximum float number is " + max);
	    }
	}


